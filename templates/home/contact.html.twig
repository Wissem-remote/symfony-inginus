{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('css/contact/style.css')}}">
	
{% endblock %}

{% block body %}
    <section>
        <h2>
        Contact Us
        </h2>
    </section>
    <section style="background:  url({{ asset('img/bateaux_contact.jpg')}}) fixed no-repeat; background-size: cover;">

        <div class="w-75">
            <h2 class="h3 text-center ">Contact Us</h2>
            <div class="row">
                <div class="col-6">
            {{form_start(form)}}
                    {{ form_row(form.name,{ 'label' : ' ', 'attr' :{'placeholder': 'Nom'}}) }}
                    {{ form_row(form.email,{ 'label' : ' ', 'attr' :{'placeholder': 'Email'}}) }}
                    {{ form_row(form.object,{ 'label' : ' ', 'attr' :{'placeholder': 'Object'}}) }}
                </div>
                <div class="col-6">
                    {{ form_row(form.message,{ 'label' : ' ', 'attr' :{'placeholder': 'Message','rows' : '8'}})}}
            {{form_end(form)}}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

