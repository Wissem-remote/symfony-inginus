{% extends 'baseProfile.html.twig' %}

{% block title %}Messagerie
{% endblock %}

{% block body %}
	<section>
<h2 class="text-center text-lg-end fs-1 mb-4 me-4 reveal">

			<i class="bi bi-chat"></i>
			Mes Messages
		</h2>
	</br>
    </br>
    </br>
    {% if messages|length >=1 %}
        <hr class=" w-75 m-auto border border-secondary border-1 mb-3 opacity-75 ">
            <div class="w-75 m-auto rounded tab p-4">
                <p class="fs-5  fw-semibold "> Vos Messages </p>
                        {% for message in messages %}
                            <aside class="reveal w-100 m-auto rounded tabs mb-3">
                                <div class="tabs-top"></div>
                                    <div class="row p-3">
                                    <div class="col-lg-6 col-md-6 col-12 fw-semibold text-center text-md-start text-lg-start p-2">Objet : 	{{message.objet}}</div>
                                    <div class="col-lg-6 col-12 col-md-6  fw-semibold text-center text-md-end text-lg-end p-2">Date : {{  message.createdAt|date('d/m/Y Ã  m:h') }}</div>
                                    <div class="col-lg-6 col-12 col-md-6 fw-semibold  text-center text-md-start text-lg-start p-2">Ref : {{ message.orders.reference }}</div>
                                    <div class="col-lg-6 col-12 col-md-6 fw-semibold text-center p-2 text-md-end text-lg-end"><a href="{{ path('profile_message_detail',{id:message.id})}}" class="btn  col-4 btn-sm btn-outline-primary"> Check </a></div>
                                    </div>
                            </aside>
                        {% endfor %}
            </div>
            {% else %}
		<div class="w-75 m-auto">
			<p class="fs-4 text-center"> Vous n'avez pas de message pour le moment !
			</p>
		</div>
		{% endif %}

    
</section>
{% endblock %}

