{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{asset('css/login/style.css')}}">
<link rel="stylesheet" href="{{asset('css/login/style_media_mobile.css')}}">
{% endblock %}
{% block body %}

<section style="background:  url({{ asset('img/ciel_login.jpg')}}) fixed no-repeat; background-size: cover;">


        <div class="col-10 col-md-8 col-lg-6 m-auto ">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h2 class="h3 mb-3 font-weight-normal">CONNECTEZ VOUS </h2>
                <span>avec vos informations</span>
                {# <label for="inputEmail" class="m-2">Email</label> #}
                <input placeholder="Email" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-5" autocomplete="email" required autofocus>
                {# <label for="inputPassword" class="m-2">Password</label> #}
                <input placeholder="Mot de Passe" type="password" name="password" id="inputPassword" class="form-control mt-4" autocomplete="current-password" required>


                <input  type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                 <div class="d-flex justify-content-center justify-content-md-center justify-content-lg-start">
                    <button class="col-10 col-md-6 col-lg-3 btn btn-lg  mt-5 " type="submit">
                        Se connecter
                    </button>
                </div>
            </form>
        </div>
</section>
{% endblock %}
