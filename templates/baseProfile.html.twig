        <h5 class="offcanvas-title " id="offcanvasExampleLabel">
            <h1 class="ing fs-1">ING<span>INUS</span>
            </h1>
        </h5>

                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <div class="mt-5 p-4 flex-column d-flex align-items-center ">
                    <a href="{{ path('profile') }}" class="mb-4 fs-4 text-decoration-none text-white">
                    <i class="bi bi-speedometer2"></i> DashBoard
                    </a>
                    <a href="{{ path('profile_setProfile')}}" class="mb-4 fs-4 text-decoration-none text-white">
                    <i class="bi bi-person-circle"></i> Profile
                    </a>
					<a href="{{ path('profile_order')}}" class="mb-4 fs-4 text-decoration-none text-white">
                    <i class="bi bi-cart"></i> Mes Commandes
                    </a>
                    <a href="{{ path('profile_message')}}" class="mb-4 fs-4 text-decoration-none text-white">
                    <i class="bi bi-chat"></i> Messagerie
                    </a>

                </div>

            </div>
        </div>

		<main class="container mt-5 mb-5 "> 
