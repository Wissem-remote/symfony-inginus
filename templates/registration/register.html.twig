{% extends 'base.html.twig' %}

{% block title %}Inscrivez-vous{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{asset('css/register/style.css')}}">
{% endblock %}

{% block body %}
<section style="background:  url({{ asset('img/ciel_login.jpg')}}) fixed no-repeat; background-size: cover;">


<div class="w-50">
    <h2 class="h3">Inscrivez-vous !</h2>


    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.name,{ 'label' : ' ', 'attr' :{'placeholder': 'Votre Nom'}}) }}
    {{ form_row(registrationForm.email,{ 'label' : ' ', 'attr' :{'placeholder': 'Votre Email'} }) }}
    {{ form_row(registrationForm.plainPassword, {
        label: ' ', 'attr' :{'placeholder': 'Votre Mot de Passe'}
    }) }}
    {{ form_row(registrationForm.agreeTerms,{ label:" J'accepte les termes et conditions utilisation"}) }}


        <button type="submit" class="btn btn-lg">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
    </section>
{% endblock %}
